@inherits UmbracoViewPage<PaginationViewModel>
@using umbraco.Models.ViewModels

@if (Model != null && Model.TotalPages > 1)
{ 
            @if (Model.CurrentPage > 1)
            { 
                    <a class="button small" href="@string.Format(Model.PaginationUrlFormat ?? "", (Model.CurrentPage - 1).ToString())">Previous</a>
          }
            @if (Model.CurrentPage < Model.TotalPages)
    {
        if (Model.CurrentPage == 0)
        {
            Model.CurrentPage += 1;
        }
        <a class="button small" href="@string.Format(Model.PaginationUrlFormat ?? "", (Model.CurrentPage + 1).ToString())">Next</a>
 
            }  
}
